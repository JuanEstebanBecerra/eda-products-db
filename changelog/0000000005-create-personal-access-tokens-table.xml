<?xml version="1.0" encoding="UTF-8" standalone="no"?>
<databaseChangeLog
        xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
        http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-3.8.xsd">

    <changeSet
            id="0000000005"
            author="estebanbecerradev">
        <createTable tableName="personal_access_tokens">
            <column name="id" type="bigserial">
                <constraints nullable="false" primaryKey="true"/>
            </column>
            <column name="tokenable_type" type="varchar(255)">
                <constraints nullable="false"/>
            </column>
            <column name="tokenable_id" type="bigint">
                <constraints nullable="false"/>
            </column>
            <column name="name" type="varchar(255)">
                <constraints nullable="false"/>
            </column>
            <column name="token" type="varchar(64)">
                <constraints nullable="false" unique="true"/>
            </column>
            <column name="abilities" type="text"/>
            <column name="last_used_at" type="timestamp(0)"/>
            <column name="expires_at" type="timestamp(0)"/>
            <column name="created_at" type="timestamp(0)"/>
            <column name="updated_at" type="timestamp(0)"/>
        </createTable>
        <createIndex indexName="personal_access_tokens_tokenable_type_tokenable_id_index" tableName="personal_access_tokens">
            <column name="tokenable_type"/>
            <column name="tokenable_id"/>
        </createIndex>

        <rollback>
            <dropTable tableName="personal_access_tokens"/>
        </rollback>
    </changeSet>

</databaseChangeLog>
