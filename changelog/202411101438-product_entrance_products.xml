<?xml version="1.0" encoding="UTF-8"?>
    <databaseChangeLog
        xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xmlns:ext="http://www.liquibase.org/xml/ns/dbchangelog-ext"
        xmlns:pro="http://www.liquibase.org/xml/ns/pro"
        xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
            http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-latest.xsd
            http://www.liquibase.org/xml/ns/dbchangelog-ext http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-ext.xsd">
        <changeSet id="202411101438" author="estebanbecerradev">

            <createTable tableName='product_entrance_products'>
                <column name="id" type="BIGINT">
                    <constraints nullable="false" primaryKey="true"/>
                </column>
                <column name="product_entrance_id" type="BIGINT">
                    <constraints nullable="false"/>
                </column>
                <column name="product_id" type="BIGINT">
                    <constraints nullable="false"/>
                </column>
                <column name="amount" type="INTEGER">
                    <constraints nullable="false"/>
                </column>
                <column name="created_at" type="TIMESTAMP">
                    <constraints nullable="true"/>
                </column>
                <column name="updated_at" type="TIMESTAMP">
                    <constraints nullable="true"/>
                </column>
                <column name="deleted_at" type="TIMESTAMP">
                    <constraints nullable="true"/>
                </column>
                <column name="user_who_created" type="INTEGER">
                    <constraints nullable="true"/>
                </column>
                <column name="user_who_updated" type="INTEGER">
                    <constraints nullable="true"/>
                </column>
                <column name="user_who_deleted" type="INTEGER">
                    <constraints nullable="true"/>
                </column>
            </createTable>

            <addForeignKeyConstraint  baseColumnNames="product_entrance_id"
                baseTableName="product_entrance_products"
                constraintName="fk_product_entrance_id"
                deferrable="true"
                initiallyDeferred="true"
                onDelete="CASCADE"
                onUpdate="RESTRICT"
                referencedColumnNames="id"
                referencedTableName="product_entrances"
                validate="true"/>

            <addForeignKeyConstraint  baseColumnNames="product_id"
                baseTableName="product_entrance_products"
                constraintName="fk_product_id"
                deferrable="true"
                initiallyDeferred="true"
                onDelete="CASCADE"
                onUpdate="RESTRICT"
                referencedColumnNames="id"
                referencedTableName="products"
                validate="true"/>

            <rollback>
                <dropTable cascadeConstraints="false" tableName="product_entrance_products"/>
            </rollback>

        </changeSet>
    </databaseChangeLog>